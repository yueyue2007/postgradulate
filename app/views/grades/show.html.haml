.container
  .group.pull-right
    = link_to "批量添加",batch_grade_path(@grade),:class =>"btn btn-mini  btn-primary"
    = link_to "添加学生",new_grade_user_path(@grade), :class =>"btn btn-mini btn-primary "

  .row
    .col-md-2
    .col-md-4
      %h2
        = @grade.name
        = " 学生列表"
      %p
        = "班级资料： "
        = @grade.description
  .row
    .col-md-2
    .col-md-6
      %table{:class =>"table table-bordered"}
        %tbody
          - @users.each do |user|
            %tr
              %td= user.stuno
              %td= user.name
              %td= link_to "编辑",edit_grade_user_path(user.grade,user),:class =>"btn btn-mini "
              %td= link_to "删除",grade_user_path(user.grade,user),:class =>"btn btn-mini", :method => :delete, :confirm => "确定要删除该学生？"
              %td= link_to "显示",grade_user_path(user.grade,user),:class =>"btn btn-mini"




